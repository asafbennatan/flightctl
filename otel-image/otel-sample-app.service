[Unit]
Description=OpenTelemetry Sample Application
Documentation=https://opentelemetry.io/
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/local/bin/otel-sample-app /etc/otel-sample/config.yaml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 